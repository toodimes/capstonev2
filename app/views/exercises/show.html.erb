<div id="show-exercise-app">
  <div class="container-fluid page-head">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
          <ul class="breadcrumb">
            <li><a href="/"><em class="fa fa-home fa-lg"></em></a></li>
              <li><a href="/exercises">Exercises</a></li>
              <li class="active-bc">{{ exercise.name }}</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <!-- END BREADCRUMBS -->

  <!-- BEGIN EXERCISE DETAIL -->
  <div class="portfolio-detail">
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-md-offset-1 col-xs-12">
          <% if current_user && current_user.admin %>
            <a href="/exercises/<%= @exercise.id %>/edit">Edit Exercise</a>
          <% end %>
          <figure class="exercise-gif">
            <img :src="firstGif" alt="/">
          </figure>
          <h2>{{ exercise.name }}</h2>
          <div>
            <h4>Muscle: {{ exercise.muscle }}</h4>
          </div>
          <div class="border-blue"></div>
          <div class="folio-info">
          <ol>
            <template v-for="description in exercise.descriptions">
              <li>{{ description.note }}</li>
            </template>
          </ol>
          </div>
          <div class="border-blue"></div>
        </div>
      </div>
    </div>
  </div>
</div>