<div id="edit-trainer-profile-app">
  <div class="container-fluid page-head">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
          <h2>{{ newName }}</h2>
          <ul class="breadcrumb">
            <li><a href="/"><em class="fa fa-home fa-lg"></em></a></li>
            <li><a href="/trainer_profiles">Trainers</a></li>
            <li><a :href="'/trainer_profiles/' + trainerID">{{ newName }}</a></li>
            <li class="active-bc">Edit Profile</li>
          </ul>
        </div>
      </div>
    </div>
  </div> <!-- END BREADCRUMBS -->

  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="checkout-wrapper" style="margin-top: 10px;">
          <div class="row">
            <div class="col-xs-12 col-sm-6 form-left">
              <h3>Profile Information</h3>
              <div class="row">
                <div class="col-xs-12">
                  <div class="progress-wrapper">
                    <div class="progress">
                      <div class="progress-bar progress-default" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" v-bind:style="{ width: progress }">
                        <span class="sr-only">20% Complete</span>
                      </div>
                    </div>
                  </div>
                  <hr>
                </div>
              </div>
              <transition-group name="fade" mode="out-in">
                <template v-if="showInformation">
                  <div v-bind:key="showInformation">
                    <h4>Information</h4>
                    <div class="row">
                      <div class="col-xs-12">
                        <label>Name: </label>
                        <input type="text" v-model="newName">
                      </div>
                      <div class="col-xs-12">
                        <label>Gender: </label>
                        <input type="radio" value="male" v-model="newGender"> Male 
                        <input type="radio" value="female" v-model="newGender"> Female
                      </div>
                      <div class="col-xs-12">
                        <label>Bio: </label>
                        <textarea v-model="newBio" style="width: 100%;" rows="5"></textarea>
                      </div>
                      <div class="col-xs-12">
                        <label>Avatar: </label>
                        <input type="text" v-model="newAvatar">
                      </div>
                    </div>
                    <button class="btn btn-lg btn-success" style="width: 100%" v-on:click="saveInfo()">Save Info</button>
                  </div>
                </template><!-- END SHOWInformation -->
                <template v-if="showExperience">
                  <div v-bind:key="showExperience">
                    <h4>Experience</h4>
                    <div class="col-xs-12">
                      <label>Title:</label>
                      <input type="text" v-model="newExperienceTitle">
                    </div>
                    <div class="col-xs-12">
                      <label>Company:</label>
                      <input type="text" v-model="newExperienceCompany">
                    </div>
                    <div class="col-xs-12">
                      <label>Description:</label>
                      <!-- <input type="text" v-model="newExperienceDescription"> -->
                      <textarea v-model="newExperienceDescription" style="width: 100%;" rows="10"></textarea>
                    </div>
                    <div class="col-xs-12">
                      <label>Start Date:</label>
                      <input type="date" v-model="newExperienceStartDate" style="width: 100%">
                    </div>
                    <div class="col-xs-12">
                      <label>End Date:</label>
                      <input type="date" v-model="newExperienceEndDate" style="width: 100%">
                    </div>
                    <div class="col-xs-12">
                      <label></label>
                      <div class="btn-group btn-group-justified">
                        <a v-on:click="backToInformation()" class="btn btn-info ">Back</a>
                        <a v-on:click="saveExperienceAddNew()" class="btn btn-primary ">Add Another</a>
                        <a v-on:click="saveExperienceMoveOn()" class="btn btn-success ">Add And Move On</a>
                      </div>
                    </div>
                  </div>
                </template><!-- END EDITEXPERIENCE -->
                <template v-if="editExperience">
                  <div v-bind:key="editExperience">
                    <h4>Experience</h4>
                    <div class="col-xs-12">
                      <label>Title:</label>
                      <input type="text" v-model="newExperienceTitle">
                    </div>
                    <div class="col-xs-12">
                      <label>Company:</label>
                      <input type="text" v-model="newExperienceCompany">
                    </div>
                    <div class="col-xs-12">
                      <label>Description:</label>
                      <!-- <input type="text" v-model="newExperienceDescription"> -->
                      <textarea v-model="newExperienceDescription" style="width: 100%;" rows="10"></textarea>
                    </div>
                    <div class="col-xs-12">
                      <label>Start Date:</label>
                      <input type="date" v-model="newExperienceStartDate" style="width: 100%">
                    </div>
                    <div class="col-xs-12">
                      <label>End Date:</label>
                      <input type="date" v-model="newExperienceEndDate" style="width: 100%">
                    </div>
                    <div class="col-xs-12">
                      <label></label>
                      <div class="btn-group btn-group-justified">
                        <a v-on:click="backToInformation()" class="btn btn-info ">Back</a>
                        <a v-on:click="saveEditedExperienceAddNew()" class="btn btn-primary ">Save Experience</a>
                        <a v-on:click="saveEditedExperienceMoveOn()" class="btn btn-success ">Save And Move On</a>
                      </div>
                    </div>
                  </div>
                </template><!-- END EDITEXPERIENCE -->
                <template v-if="showQualifications">
                  <div v-bind:key="showQualifications">
                    <h4>Qualifications</h4>
                    <div class="col-xs-12">
                      <label>Name: </label>
                      <input type="text" v-model="newQualificationName">
                    </div>
                    <div class="col-xs-12">
                      <label></label>
                      <div class="btn-group btn-group-justified">
                        <a v-on:click="backToExperience()" class="btn btn-info ">Back</a>
                        <a v-on:click="saveQualificationAddNew()" class="btn btn-primary ">Add Another</a>
                        <a v-on:click="saveQualificationMoveOn()" class="btn btn-success ">Add And Move On</a>
                      </div>
                    </div>
                  </div><!-- END DIV SHOWQUALIFICATIONS -->
                </template><!-- END SHOWQUALIFICATIONS -->
              </transition-group>
            </div>
            <div class="col-xs-12 col-sm-6">
              <h3>Profile Preview</h3>
              <div class="row">
                <div class="col-xs-12 text-center">
                  <img class="img-responsive profile-preview-img" :src="newAvatar" alt="">
                </div>
                <div class="col-xs-12 text-center">
                  <h2>{{ newName }} <span v-if="newGender === 'male'" class="fa fa-male"></span> <span v-if="newGender === 'female'" class="fa fa-female"></span></h2>
                </div>
                <div class="col-xs-12 text-center">
                  <p>{{ newBio }}</p>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <div class="profile-timeline">
                    <div class="time-box">
                      <div class="box-head">
                        <span class="box-icon fa fa-rocket"></span>
                        <h2>Experience</h2>
                      </div>
                      <template v-for="experience in experiences">
                        <div class="article-post row">
                          <div class="col-xs-12 col-sm-3 col-md-2 timebox-info">
                            <div class="article-meta">
                              <div class="meta-time"><span class="day-month">{{ experience.start_date }} - {{ experience.end_date }}</span></div>
                            </div>
                          </div>
                          <div class="col-xs-12 col-sm-9 col-md-10 post-detail">
                            <h4>{{ experience.company }} <span>{{ experience.title }}</span></h4>
                            <h3><span v-on:click="showEditExperience(experience)" class="fa fa-pencil-square-o"></span> || <span v-on:click="removeExperience(experience)" class="fa fa-trash"></span></h3>
                            <p>{{ experience.description }}</p>
                          </div>
                        </div><!-- END ARTICLE-POST-ROW -->
                      </template>
                      <div class="new-experience">
                        <div class="article-post row">
                          <div class="col-xs-12 col-sm-3 col-md-2 timebox-info">
                            <div class="article-meta">
                              <div class="meta-time"><span class="day-month">{{ newExperienceStartDate }} - {{ newExperienceEndDate }}</span></div>
                            </div>
                          </div>
                          <div class="col-xs-12 col-sm-9 col-md-10 post-detail">
                            <h4>{{ newExperienceCompany }} <span>{{ newExperienceTitle }}</span></h4>
                            <p>{{ newExperienceDescription }}</p>
                          </div>
                        </div><!-- END ARTICLE-POST-ROW -->
                      </div>
                    </div><!-- END TIME-BOX -->
                    <div class="time-box">
                      <div class="box-head">
                        <span class="box-icon fa fa-trophy"></span>
                        <h2>Qualifications</h2>
                      </div>
                      <template v-for="qualification in qualifications">
                        <div class="article-post-row">
                          <div class="col-xs-12 col-sm-3 col-md-2 timebox-info">
                            <div class="article-meta">
                              <div class="meta-time"></div>
                            </div>
                          </div>
                          <div class="col-xs-12 col-sm-9 col-md-10 post-detail">
                            <h3>{{ qualification.name }} || <span class="fa fa-trash" v-on:click="removeQualification(qualification)"></span></h3>  
                          </div>
                        </div>
                      </template>
                      <div class="new-qualification">
                        <div class="article-post-row">
                          <div class="col-xs-12 col-sm-3 col-md-2 timebox-info">
                            <div class="article-meta">
                              <div class="meta-time"></div>
                            </div>
                          </div>
                          <div class="col-xs-12 col-sm-9 col-md-10 post-detail">
                            <h3>{{ newQualificationName }}</h3>  
                          </div>
                        </div>
                      </div><!-- END new-qualification -->
                    </div><!-- END TIME-BOX -->
                  </div><!-- END PROFILE TIMELINE -->
                </div>
              </div><!-- EXPERIENCE ROW -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>